<section class="container">
<h2 class="text-center my-4"><%= @list.name%></h2>
  <h3 class="my-5">Lorem, ipsum dolor sit amet </h3>

  <% @list.bookmarks.each do |bookmark| %>
  <div class="d-flex justify-content-between">
    <p class= "text-secondary"><%= bookmark.movie.title %></p>
    <p><%= bookmark.comment %></p>
    <%= link_to "delete a bookmark", bookmark_path(bookmark), method: :delete %></p>
  </div>
  <% end %>

  <div>
    <%= link_to "add a movie", list_path %>
    <%= link_to "add a bookmark", new_list_bookmark_path(@list) %>

  </div>


</section>
